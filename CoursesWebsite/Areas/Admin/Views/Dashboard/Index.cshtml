@model CoursesWebsite.ViewModels.DashboardCounterViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="text-center my-4">Admin Dashboard</h2>

<div class="container">
    <div class="row text-center mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary shadow-lg rounded mb-3">
                <div class="card-header"><i class="fas fa-folder-open"></i> Categories</div>
                <div class="card-body">
                    <h5 class="card-title">Manage Category</h5>
                    <p class="card-text">View, edit, and manage all categories.</p>
                    <a href="@Url.Action("Index", "Category", new { area = "Admin" })" class="btn btn-light rounded-pill">Manage Categories</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success shadow-lg rounded mb-3">
                <div class="card-header"><i class="fas fa-book"></i> Courses</div>
                <div class="card-body">
                    <h5 class="card-title">Manage Courses</h5>
                    <p class="card-text">Add, edit, or remove courses from the system.</p>
                    <a href="@Url.Action("Index", "Course", new { area = "Admin" })" class="btn btn-light rounded-pill">Go to Courses</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-warning shadow-lg rounded mb-3">
                <div class="card-header"><i class="fas fa-chalkboard-teacher"></i> Instructors</div>
                <div class="card-body">
                    <h5 class="card-title">Manage Instructors</h5>
                    <p class="card-text">View and manage all instructors.</p>
                    <a href="@Url.Action("ShowInstructors", "Dashboard", new { area = "Admin" })" class="btn btn-light rounded-pill">Go to Instructors</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-black-50 bg-dark bg-opacity-10 shadow-lg rounded mb-3">
                <div class="card-header"><i class="fas fa-chart-bar"></i> Reports</div>
                <div class="card-body">
                    <h5 class="card-title">Total Categories</h5>
                    <p class="card-text display-4">@Model.CategoryCount</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-info bg-opacity-75 shadow-lg rounded mb-3">
                <div class="card-header"><i class="fas fa-chart-line"></i> Reports</div>
                <div class="card-body">
                    <h5 class="card-title">Total Courses</h5>
                    <p class="card-text display-4">@Model.CourseCount</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-danger shadow-lg rounded mb-3">
                <div class="card-header"><i class="fas fa-user-tie"></i> Reports</div>
                <div class="card-body d-flex justify-content-evenly">
                    <img src="~/assets/matrial/adminDashboard/instructorDash.png" width="100" height="100" alt="Users" class="img-fluid mb-2" />
                    <div>
                        <h5 class="card-title">Total Instructors</h5>
                        <p class="card-text display-4">@Model.InstructorCount</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card text-white bg-dark shadow-lg rounded mb-3">
                <div class="card-header"><i class="fas fa-users"></i> Reports</div>
                <div class="card-body d-flex justify-content-around align-items-center">
                    <img src="~/assets/matrial/adminDashboard/userDash.png" width="150" height="150" alt="Users" class="img-fluid mb-2" />
                    <div>
                        <h5 class="card-title">All Users Count</h5>
                        <p class="card-text display-4">@Model.UserCount</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-white bg-dark shadow-lg rounded mb-3">
                <div class="card-header"><i class="fas fa-user-shield"></i> Reports</div>
                <div class="card-body d-flex justify-content-around align-items-center">
                    <img src="~/assets/matrial/adminDashboard/adminDash.png" width="150" height="150" alt="Admins" class="img-fluid mb-2" />
                    <div>
                        <h5 class="card-title">All Admin Count</h5>
                        <p class="card-text display-4">@Model.AdminCount</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
