@model IEnumerable<CoursesWebsite.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-primary rounded-pill shadow-sm">Create New Category</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="~/@item.ImagePath" class="card-img-top img-fluid" alt="@item.Name" style="max-height: 200px; object-fit: cover;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-primary">@item.Name</h5>
                    <p class="card-text flex-grow-1">@item.Description</p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <div class="justify-content-around m-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-4">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
