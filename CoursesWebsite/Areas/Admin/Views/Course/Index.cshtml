@model IEnumerable<CoursesWebsite.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary btn-lg">Create New Course</a>
    </div>

    <!-- Responsive cards layout -->
    <div class="row g-4">
        @foreach (var course in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="card h-100 shadow-sm rounded">
                    <img src="~/@Url.Content(course.ImagePath)" alt="Course Image" class="card-img-top" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text text-truncate" style="max-height: 50px;">@course.Description</p>
                        <div class="mt-auto">
                            <p class="card-text">
                                <strong>Category:</strong> @course.Category!.Name <br />
                                <strong>Students:</strong> @course.StudentCount <br />
                                <strong>Created:</strong> @course.CreatedDate.ToString("dd/MM/yyyy") <br />
                                <strong>Updated:</strong> @course.UpdatedDate.ToString("dd/MM/yyyy") <br />
                            </p>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-info btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.03);
        }
</style>
