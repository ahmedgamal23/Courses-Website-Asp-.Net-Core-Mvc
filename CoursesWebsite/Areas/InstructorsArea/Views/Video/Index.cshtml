@model IEnumerable<CoursesWebsite.Models.Video>

@{
    ViewData["Title"] = "Video Gallery";
}

<h1 class="text-center my-4">Video Gallery</h1>

<div class="container mt-4">
    <p class="text-center">
        <a asp-action="Create" class="btn btn-primary btn-lg">Create New</a>
    </p>

    @*<a asp-area="User" asp-controller="Course" asp-action="Index" class="text-decoration-none text-dark">
        <div class="card category-card">
            <img src="~/@category.ImagePath" class="card-img-top" alt="@category.Name">
            <div class="card-body">
                <h5 class="card-title">@category.Name</h5>
            </div>
        </div>
    </a>*@

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                    <div class="card shadow-sm border-0">
                        <video class="card-img-top">
                            <source src="~/@item.VideoPath" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                        <div class="card-body bg-success bg-opacity-25">
                            <h5 class="card-title text-black">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text text-black text-opacity-75">@Html.DisplayFor(modelItem => item.Description)</p>
                            <p class="card-text mb-4">
                                <small class="text-muted">Uploaded on @Html.DisplayFor(modelItem => item.UploadDate)</small>
                            </p>
                            <div class="d-flex">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning me-4">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.05);
        }
</style>











