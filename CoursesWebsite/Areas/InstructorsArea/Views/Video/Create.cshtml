@model CoursesWebsite.Models.Video

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center my-4">Create Video</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label">Video Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter video title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter video description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UploadDate" class="control-label">Upload Date</label>
                    <input asp-for="UploadDate" class="form-control" type="date" />
                    <span asp-validation-for="UploadDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="VideoFile" class="control-label">Upload Video</label>
                    <input type="file" asp-for="VideoFile" class="form-control" />
                    <span asp-validation-for="VideoFile" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CourseId" class="control-label">Select Course</label>
                    <select asp-for="CourseId" class="form-control" asp-items="ViewBag.Courses">
                        <option value="">Select Course</option>
                    </select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create Video" class="btn btn-primary btn-lg mt-3" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
