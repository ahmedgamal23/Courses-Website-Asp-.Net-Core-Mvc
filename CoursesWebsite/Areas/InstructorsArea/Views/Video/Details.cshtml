@model CoursesWebsite.Models.Video

@{
    ViewData["Title"] = "Details";
}

<h1 class="video-title">@Model.Title</h1>

<div class="video-container">
    <video controls autoplay>
        <source src="~/@Model.VideoPath" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</div>

<div class="video-details">
    <h4>Video Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UploadDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UploadDate)
        </dd>
    </dl>
</div>

<div class="action-links">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<style>
    .video-title {
        font-size: 2em;
        margin-bottom: 20px;
        text-align: center;
    }
    .video-container {
        margin-bottom: 20px;
        position: relative;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        height: 0;
        overflow: hidden;
    }
    .video-container video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
    .video-details {
        margin-top: 20px;
    }
    .action-links {
        margin-top: 20px;
        text-align: center;
    }
    .btn {
        margin: 5px;
    }
</style>
