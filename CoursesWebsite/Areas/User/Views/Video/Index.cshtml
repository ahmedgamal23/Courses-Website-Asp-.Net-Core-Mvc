@model IEnumerable<CoursesWebsite.Models.Video>

@{
    ViewData["Title"] = "Video Index";
}

<div class="container my-4">
    <h1 class="text-center mb-4">Video Index</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Thumbnail</th>
                <th scope="col">Video Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="video-thumbnail">
                            <video class="video-preview">
                                <source src="~/@item.VideoPath" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    </td>
                    <td>
                        <a asp-area="User" asp-controller="Video" asp-action="Show" asp-route-id="@item.Id" class="video-link">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                                    <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.UploadDate)</small></p>
                                </div>
                            </div>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .video-thumbnail {
        position: relative;
    }

    .video-preview {
        width: 100px;
        height: 100px;
        object-fit: cover; /* Ensures the video fits nicely in the container */
        border-radius: 8px; /* Rounded corners */
        transition: transform 0.3s ease; /* Smooth scaling effect */
    }

    .video-thumbnail:hover .video-preview {
        transform: scale(1.05); /* Slightly enlarge the video on hover */
    }

    .video-link {
        text-decoration: none; /* Remove underline from link */
        color: inherit; /* Inherit color from parent */
    }

    .video-link:hover .card {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3); /* Stronger shadow on hover */
        transition: box-shadow 0.3s ease; /* Smooth transition for box shadow */
    }

</style>
